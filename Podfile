platform :ios, '11.0'

# ignore all warnings from all pods
inhibit_all_warnings!

targets_to_add = ["eTekiRecruiter", "eTekiRecruiterTests", "eTekiRecruiterUITests"]
targets_to_add.each do |target|
  target "#{target}" do
    use_frameworks!
    pod 'Toast-Swift'
    pod 'SwiftLint'
    pod 'FlexibleSteppedProgressBar'
    pod 'SideMenu'
    pod 'DropDown'
    pod 'ReachabilitySwift'
    pod 'NotificationBannerSwift'
    pod 'IQKeyboardManagerSwift'
    pod 'FacebookCore'
    pod 'FacebookLogin'
    pod 'FacebookShare'
    pod 'DLRadioButton'
    pod 'SimpleCheckbox'
    pod 'KWVerificationCodeView'
    pod 'TagListView', '~> 1.0'
    pod 'AWSS3'
    pod 'SDWebImage'
    pod 'FlagPhoneNumber'
    pod 'JZCalendarWeekView'
    pod 'Cosmos'
    pod 'ScrollableSegmentedControl'
    pod 'Charts'
    pod 'JJFloatingActionButton'
    pod 'Instabug'
    pod 'GrowingTextView'
    pod 'Amplitude', '~> 5.0.0'
    pod 'iOSDropDown'

  end
end



